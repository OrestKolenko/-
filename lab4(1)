while True:
    word = input("Введіть ваше слово: ")
    if word.isdigit():
        print(int(word) + 1)
    elif word.isalpha():
        new_word = ""
        for i in word:
            new_word += chr(ord(i) + 1)
            y = new_word.replace("{", "a")
            l = y.replace("}", "b")
            j = l.replace("ђ", "а")
            i = j.replace("|", "z")
        print(i)
